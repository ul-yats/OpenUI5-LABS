<mvc:View
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:core="sap.ui.core">
	

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">
		<semantic:titleHeading
			class='sapUiMarginSmall'>
			<HBox
				alignItems="Center"
			>
				<Button
				tooltip="{i18n>ttlNavBack}"
				press="onNavBack"
				icon="{i18n>iBack}"
				type="Emphasized"/>
				<Title class='sapUiSmallMarginBegin' text="{MaterialText}"/>
			</HBox>
		</semantic:titleHeading>
		<semantic:titleCustomTextActions>
			<Button tooltip='{i18>ttlEdit}' 
				text='{i18n>ttlEdit}' 
				icon='{i18n>iEdit}'
				type='Emphasized'
				visible="{= !${objectView>/editMode}}"
				press="onPressEditMaterial"/>
			<Button tooltip='{i18>ttlCancel}' 
				text='{i18n>ttlCancel}' 
				icon='{i18n>iCancel}'
				visible='{objectView>/editMode}'
				press="onPressCancelEditMaterial"/>
			<Button tooltip='{i18>ttlSave}' 
				text='{i18n>ttlSave}' 
				icon='{i18n>iSave}'
				visible='{objectView>/editMode}'
				press="onPressSaveEditMaterial"/>
		</semantic:titleCustomTextActions>
		<semantic:content>
		<IconTabBar
			select="onSelectIconTabBar"
			headerMode="Inline">
			<items>
				<IconTabFilter
					enabled="{= !${objectView>/editMode} || ${objectView>/selectedKeyITB} === 'list'}"
					icon="{i18n>iList}"
					key="list"
					text="{i18n>ttlList}">
					<List
						backgroundDesign="Solid"
						headerText="{= ${objectView>/editMode} ? ${i18n>ttlEditMode} : ${i18n>ttlViewMode}}"
					>
						<InputListItem
							label="{i18n>ttlChange}"
							labelTextDirection="Inherit"
						>
							<Switch
								change="onChange"
								state="{objectView>/editMode}"
							>
							</Switch>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlMaterialText}"
							labelTextDirection="Inherit"
						>
							<Text
								visible="{= !${objectView>/editMode}}"
								text="{MaterialText}"/>
							<Input
								enabled="{= ${objectView>/editMode} &amp;&amp; ${MaterialText} !== '' || null || undefined}"
								maxLength="128"
								visible="{= ${objectView>/editMode}}"
								width="15em"
								value="{MaterialText}"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlMaterialDescription}"
							labelTextDirection="Inherit"
						>
							<Text
								visible="{= !${objectView>/editMode}}"
								text="{MaterialDescription}"/>
							<Input
								enabled="{= ${objectView>/editMode} &amp;&amp; ${MaterialDescription} !== '' || null || undefined}"
								width="15em"
								maxLength="256"
								visible="{= ${objectView>/editMode}}"
								value="{MaterialDescription}"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlGroupText}"
							labelTextDirection="Inherit"
						>
							<Text
								visible="{= !${objectView>/editMode}}"
								text="{GroupText}"/>
							<Select
								id="SelectGroup"
								visible="{= ${objectView>/editMode}}"
								forceSelection="false"
								selectedKey="{GroupID}"
								width="15em"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlSubGroupText}"
							labelTextDirection="Inherit"
						>
							<Text
								visible="{= !${objectView>/editMode}}"
								text="{SubGroupText}"/>
							<Select
								id="SelectSubGroup"
								selectedKey="{SubGroupID}"
								visible="{= ${objectView>/editMode}}"
								forceSelection="false"
								width="15em"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlCreated}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{Created}"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlCreatedBy}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{CreatedBy}"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlModified}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{Modified}"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlModifiedBy}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{
									parts: ['ModifiedByFullName', 'Modified'],
									formatter: '.formatter.modifiedFormatter'
								}"/>
						</InputListItem>
					</List>
				</IconTabFilter>
				<IconTabFilter
				enabled="{= !${objectView>/editMode} || ${objectView>/selectedKeyITB} === 'form'}"
				id="FormIconTabFilter"
				icon="{i18n>iForm}"
				key="form"
				text="{i18n>ttlForm}">
				</IconTabFilter>
			</items>
		</IconTabBar>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>