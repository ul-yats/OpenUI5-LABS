<mvc:View
	controllerName="zjblessons.Worklist.controller.Worklist"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>
		<semantic:content>
			<Table
				id="table"
				width="100%"
				items="{
					path: '/zjblessons_base_Materials',
					sorter: {
						path: 'CreatedBy',
						descending: false
					}
				}"
				noDataText="{worklistView>/tableNoDataText}"
				busyIndicatorDelay="{worklistView>/tableBusyDelay}"
				growing="true"
				growingThreshold="15"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer/>
						<Button 
							text='{i18n>CreateButton}'
							icon='{i18n>iSave}'
							press='onPressCreateMaterial'
							type='Emphasized'/>
						<SearchField
							id="searchFieldMaterialText"
							tooltip="{i18n>worklistSearchTooltip}"
							search="onSearchMaterialText"
							liveChange="onSearchMaterialText"
							width="auto">
						</SearchField>
						<Button
						icon="{i18n>iRefresh}"
						tooltip="{i18n>ttlRefresh}"
						press="onRefresh"
						/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column id="MaterialTextColumn">
						<Text text="{i18n>MaterialTextColumnTitle}" id="nameMaterialTextTitle"/>
					</Column>
					<Column id="MaterialDescriptionColumn">
						<Text text="{i18n>MaterialDescriptionColumnTitle}" id="nameMateriaDescriptionTitle"/>
					</Column>
					<Column id="CreatedColumn">
						<Text text="{i18n>CreatedColumnTitle}" id="CreatedTitle"/>
					</Column>
					<Column id="CreatedByFullNameColumn">
						<Text text="{i18n>CreatedByFullNameColumnTitle}" id="CreatedByFullNameTitle"/>
					</Column>
					<Column id="ModifiedColumn">
						<Text text="{i18n>ModifiedColumnTitle}" id="ModifiedTitle"/>
					</Column>
					<Column id="ModifiedByFullNameColumn">
						<Text text="{i18n>ModifiedByFullNameColumnTitle}" id="ModifiedByFullNameTitle"/>
					</Column>
					<Column
					width="5%"/>
				</columns>

				<items>
					<ColumnListItem
						type="Navigation"
						press="onPress">
						<cells>
							<ObjectIdentifier
								title="{MaterialText}"/>
							<ObjectIdentifier
								title="{MaterialDescription}"/>
							<ObjectIdentifier
								title="{
									path: 'Created',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'short'
									}
								}"/>
							<ObjectIdentifier
								title="{CreatedByFullName}"/>
								<ObjectIdentifier
								title="{
									path: 'Modified',
									type: 'sap.ui.model.type.DateTime',
									formatOptions:{
										style: 'medium'
									}
								}"/>
							<ObjectIdentifier
								title="{ModifiedByFullName}"/>
							<Button
								tooltip='{i18n>ttlDelete}'
								icon='{i18n>iDelete}'
								press='onPressDeleteEntry'
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>