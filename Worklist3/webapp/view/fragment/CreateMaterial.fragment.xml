<core:FragmentDefinition
	xmlns:core='sap.ui.core'
	xmlns='sap.m'>
		<Dialog
			title='{i18n>ttlCreateMaterial}'
		>
			<VBox
			class="sapUiSmallMargin">
				<Label
					text='{i18n>ttlMaterialText}'/>
				<Input 
					maxLength="128"
					value='{MaterialText}'/> 
				<Label
					text='{i18n>ttlMaterialDescription}'/>
				<Input
					maxLength="256"
					value='{MaterialDescription}'/> 
				<Label
					text='{i18n>ttlGroupID}'/> 
				<Input
					maxLength="10"
					value="{GroupID}"/> 
				<Label
					text='{i18n>ttlSubGroupID}'/>
				<Input
					maxLength="10"
					value="{SubGroupID}"/> 
					<FlexBox
						justifyContent='SpaceBetween'>
					<Button
						text='{i18n>closeDialog}'
						icon='{i18n>iClose}'
						press='onPressCloseCreateDialog'/>
					<Button
						text='{i18n>saveMaterial}'
						icon='{i18n>iSave}'
						press='onPressSaveCreateMaterial'
						type="Emphasized"/>
			</FlexBox>
			</VBox>
		</Dialog>
</core:FragmentDefinition>