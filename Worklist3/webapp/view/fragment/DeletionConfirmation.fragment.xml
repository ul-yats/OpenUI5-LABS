<core:FragmentDefinition
xmlns:core='sap.ui.core'
xmlns='sap.m'>
	<Dialog
		title='{i18n>ttldeletionConfiramtion}'
	>
		<Text 
		class='sapUiSmallMargin'
		text='{i18n>tdeletionConfiramtion}'/>
		<FlexBox 
		justifyContent='SpaceBetween'>
			<Button
				tooltip='{i18n>closeDialog}'
				text='{i18n>closeDialog}'
				icon='{i18n>iClose}'
				class='sapUiSmallMarginBegin'
				press='onPressCancelDeleteRecord'
			/>
			<Button
				class='sapUiSmallMarginEnd'
				tooltip='{i18n>ttAccept}'
				text='{i18n>ttAccept}'
				icon='{i18n>iAccept}'
				type='Emphasized'
				press='onPressConfirmDeleteRecord'
			/>
		</FlexBox>
	</Dialog>
</core:FragmentDefinition>