<mvc:View
	controllerName="zjblessons.Worklist.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">
		<semantic:titleHeading
			class='sapUiMarginSmall'>
			<HBox
				alignItems="Center"
			>
				<Button
				tooltip="{i18n>ttlNavBack}"
				press="onNavBack"
				icon="{i18n>iBack}"
				type="Emphasized"/>
				<Title class='sapUiSmallMarginBegin' text="{MaterialText}"/>
			</HBox>
		</semantic:titleHeading>
		<semantic:titleCustomTextActions>
			<Button tooltip='{i18>ttlEdit}' 
				text='{i18n>ttlEdit}' 
				icon='{i18n>iEdit}'
				type='Emphasized'
				visible="{= !${objectView>/editMode}}"
				press="onPressEditMaterial"/>
			<Button tooltip='{i18>ttlCancel}' 
				text='{i18n>ttlCancel}' 
				icon='{i18n>iCancel}'
				visible='{objectView>/editMode}'
				press="onPressCancelEditMaterial"/>
			<Button tooltip='{i18>ttlSave}' 
				text='{i18n>ttlSave}' 
				icon='{i18n>iSave}'
				visible='{objectView>/editMode}'
				press="onPressSaveEditMaterial"/>
		</semantic:titleCustomTextActions>
		<semantic:content>
<!-- 		<VBox>
			<Label
				text="{i18n>lMaterialDescription}"/>
			<Text
				visible="{= !${objectView>/editMode}}"
				text="{MaterialDescription}"/>
			<Input
				visible="{objectView>/editMode}"
				width="10em"
				value="{MaterialDescription}"
				maxLength="256"/>
			<Label
				text="{i18n>lMaterialText}"/>
			<Text
				visible="{= !${objectView>/editMode}}"
				text="{MaterialText}"/>
			<Input
				visible="{objectView>/editMode}"
				width="10em"
				value="{MaterialText}"
				maxLength="128"/>
		</VBox> -->
		<IconTabBar
		headerMode="Inline">
			<items>
				<IconTabFilter
				icon="{i18n>iList}"
				key="List"
				text="{i18n>ttlList}">
					<List
						backgroundDesign="Solid"
						headerText="{= ${objectView>/editMode} ? ${i18n>ttlEditMode} : ${i18n>ttlViewMode}}"
					>
						<InputListItem
							label="{i18n>ttlChange}"
							labelTextDirection="Inherit"
						>
							<Switch
								state="{objectView>/editMode}"
							>
								
							</Switch>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlMaterialText}"
							labelTextDirection="Inherit"
							visible="{= !${objectView>/editMode}}"
						>
							<Text
								text="{MaterialText}"/>
						</InputListItem>
						<InputListItem
							label="{i18n>ttlMaterialDescription}"
							labelTextDirection="Inherit"
							visible="{= !${objectView>/editMode}}"
						>
							<Text
								text="{MaterialDescription}"/>
						</InputListItem>
						<InputListItem
							visible="{= !${objectView>/editMode}}"
							label="{i18n>ttlGroupText}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{GroupText}"/>
						</InputListItem>
						<InputListItem
							visible="{= !${objectView>/editMode}}"
							label="{i18n>ttlSubGroupText}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{SubGroupText}"/>
						</InputListItem>
						<InputListItem
							visible="{= !${objectView>/editMode}}"
							label="{i18n>ttlCreated}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{Created}"/>
						</InputListItem>
						<InputListItem
							visible="{= !${objectView>/editMode}}"
							label="{i18n>ttlCreatedBy}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{CreatedBy}"/>
						</InputListItem>
						<InputListItem
							visible="{= !${objectView>/editMode}}"
							label="{i18n>ttlModified}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{Modified}"/>
						</InputListItem>
						<InputListItem
							visible="{= !${objectView>/editMode}}"
							label="{i18n>ttlModifiedBy}"
							labelTextDirection="Inherit"
						>
							<Text
								text="{ModifiedBy}"/>
						</InputListItem>
					</List>
				</IconTabFilter>
				<IconTabFilter
				icon="{i18n>iForm}"
				key="Form"
				text="{i18n>ttlForm}">
				</IconTabFilter>
			</items>
		</IconTabBar>
		</semantic:content>
	</semantic:SemanticPage>

</mvc:View>