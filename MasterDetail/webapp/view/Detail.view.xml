<mvc:View
	controllerName="zjblessons.MasterDetail.controller.Detail"
	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	height="100%">
	<m:Page
		showHeader="false"
		enableScrolling="true"
		class="sapUiContentPadding">
		<m:content>
			<m:VBox
				id='VBoxContent'
			>
			<m:HBox
			>
				<m:Title
					level="H2"
					text="{detailView>/masterItem}{detailView>/count}"
					visible="{= (${detailView>/masterItem}) !=='All'}"
				>
					
				</m:Title>	
			</m:HBox>
			<m:VBox
			>
				<Table
					id="Groups"
					visible="{= (${detailView>/masterItem})==='Groups'}"
				>
					<columns>
						<Column>
							<m:Label
								text="{i18n>ttlGroupID}"/>
								<template>
									<m:Text
										text="{GroupID}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlGroupText}"/>
								<template>
									<m:Text
										text="{GroupText}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlGroupDescription}"/>
								<template>
									<m:Text
										text="{GroupDescription}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreated}"/>
								<template>
									<m:Text
										text="{Created}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreatedByFullName}"/>
								<template>
									<m:Text
										text="{CreatedByFullName}"/>
								</template>
						</Column>
					</columns>
				</Table>
				<Table
					id="SubGroups"
					visible="{= (${detailView>/masterItem})==='SubGroups'}"
				>
					<columns>
						<Column>
							<m:Label
								text="{i18n>ttlSubGroupID}"/>
								<template>
									<m:Text
										text="{SubGroupID}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlSubGroupText}"/>
								<template>
									<m:Text
										text="{SubGroupText}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreated}"/>
								<template>
									<m:Text
										text="{Created}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlModified}"/>
								<template>
									<m:Text
										text="{Modified}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreatedByFullName}"/>
								<template>
									<m:Text
										text="{CreatedByFullName}"/>
								</template>
						</Column>
					</columns>
				</Table>
				<Table
					id="Regions"
					visible="{= (${detailView>/masterItem})==='Regions'}"
				>
					<columns>
						<Column>
							<m:Label
								text="{i18n>ttlRegionID}"/>
								<template>
									<m:Text
										text="{RegionID}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlRegionText}"/>
								<template>
									<m:Text
										text="{RegionText}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreated}"/>
								<template>
									<m:Text
										text="{Created}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlModified}"/>
								<template>
									<m:Text
										text="{Modified}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreatedByFullName}"/>
								<template>
									<m:Text
										text="{CreatedByFullName}"/>
								</template>
						</Column>
					</columns>
				</Table>
				<Table
					id="Plants"
					visible="{= (${detailView>/masterItem})==='Plants'}"
				>
					<columns>
						<Column>
							<m:Label
								text="{i18n>ttlPlantID}"/>
								<template>
									<m:Text
										text="{PlantID}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlPlantText}"/>
								<template>
									<m:Text
										text="{PlantText}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreated}"/>
								<template>
									<m:Text
										text="{Created}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlModified}"/>
								<template>
									<m:Text
										text="{Modified}"/>
								</template>
						</Column>
						<Column>
							<m:Label
								text="{i18n>ttlCreatedByFullName}"/>
								<template>
									<m:Text
										text="{CreatedByFullName}"/>
								</template>
						</Column>
					</columns>
				</Table>
			</m:VBox>
			</m:VBox>
		</m:content>
	</m:Page>
</mvc:View>